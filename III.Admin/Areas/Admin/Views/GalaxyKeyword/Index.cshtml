@using ESEIM.Utils
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Quản lý từ khóa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
    var session = HttpContextAccessor.HttpContext.GetSessionUser();
    bool hasPermissioGalaxyKeywordInsert = session.HasPermission(CommonUtil.Controller_GalaxyKeyword, CommonUtil.Action_Insert);
    bool hasPermissionGalaxyKeywordUpdate = session.HasPermission(CommonUtil.Controller_GalaxyKeyword, CommonUtil.Action_Update);
    bool hasPermissionGalaxyKeywordDelete = session.HasPermission(CommonUtil.Controller_GalaxyKeyword, CommonUtil.Action_Delete);
}
<div id="contentMain" ng-app="App_ESEIM" ng-controller="Ctrl_ESEIM">
    <div ng-view></div>
</div>
<script>
    var PERMISSION_GALAXY_KEYWORD = {
        Insert: @(hasPermissioGalaxyKeywordInsert ? "true" : "false"),
        Update: @(hasPermissionGalaxyKeywordUpdate ? "true" : "false"),
        Delete: @(hasPermissionGalaxyKeywordDelete ? "true" : "false"),
    };
</script>
<script src="~/views/admin/galaxyKeyword/controller.js" type="text/javascript"></script>