@using ESEIM.Utils
@{
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
    ViewData["Title"] = "Giá bán SP, nguyên liệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
    var session = HttpContextAccessor.HttpContext.GetSessionUser();
    bool hasPermissionProductSellPriceInsert = session.HasPermission(CommonUtil.Controller_ProductSellPrice, CommonUtil.Action_Insert);
    bool hasPermissionProductSellPriceUpdate = session.HasPermission(CommonUtil.Controller_ProductSellPrice, CommonUtil.Action_Update);
    bool hasPermissionProductSellPriceDelete = session.HasPermission(CommonUtil.Controller_ProductSellPrice, CommonUtil.Action_Delete);
}
@section plugin_script{
    <script src="~/lib/assets/global/plugins/angular-qrcode/qrcode.js"></script>
    <script src="~/lib/assets/global/plugins/angular-qrcode/angular-qr.js"></script>
    <script src="~/lib/assets/global/plugins/tinymce/tinymce.min.js"></script>
    <script src="~/lib/assets/global/plugins/tinymce/config.tinymce.js"></script>
}
<style>
    #contentMain {
        position: unset !important;
    }
</style>
<div id="contentMain" ng-app="App_ESEIM" ng-controller="Ctrl_ESEIM">
    <div ng-view></div>
</div>
<script>
    var PERMISSION_PRODUCT_SELL_PRICE = {
        Insert: @(hasPermissionProductSellPriceInsert ? "true" : "false"),
        Update: @(hasPermissionProductSellPriceUpdate ? "true" : "false"),
        Delete: @(hasPermissionProductSellPriceDelete ? "true" : "false"),
    };
</script>
<script src="~/views/admin/productSellPrice/controller.js" type="text/javascript"></script>
