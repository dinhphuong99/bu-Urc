@using ESEIM.Utils
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Nhóm vật tư";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
    var session = HttpContextAccessor.HttpContext.GetSessionUser();
    bool hasPermissionMaterialProductsGroupInsert = session.HasPermission(CommonUtil.Controller_MaterialProductGroup, CommonUtil.Action_Insert);
    bool hasPermissionMaterialProductsGroupUpdate = session.HasPermission(CommonUtil.Controller_MaterialProductGroup, CommonUtil.Action_Update);
    bool hasPermissionMaterialProductsGroupDelete = session.HasPermission(CommonUtil.Controller_MaterialProductGroup, CommonUtil.Action_Delete);
}

<div id="contentMain" ng-app="App_ESEIM_MATERIAL_PROD_GROUP" ng-controller="Ctrl_ESEIM_MATERIAL_PROD_GROUP">
    <div ng-view></div>
</div>
<script>
    var PERMISSION_MATERIAL_PRODUCT_GROUP = {
        Insert: @(hasPermissionMaterialProductsGroupInsert ? "true" : "false"),
        Update: @(hasPermissionMaterialProductsGroupUpdate ? "true" : "false"),
        Delete: @(hasPermissionMaterialProductsGroupDelete ? "true" : "false"),
    };
</script>
<script src="~/views/admin/materialProductGroup/controller.js" type="text/javascript"></script>
<script src="~/views/admin/urencoSetting/controller.js" type="text/javascript"></script>
